@model ProductManagement.Models.EditProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>
<form method="post" action="Edit" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="ProductName">
        <span asp-validation-for="ProductName" class="text-danger"></span>
        <input type="number" hidden class="form-control" asp-for="ProductId">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="ProductDescription">
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Code</label>
        <input type="text" class="form-control" asp-for="ProductCode">
        <span asp-validation-for="ProductCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Expiry Date</label>
        <input type="date" class="form-control" asp-for="ExpiryDate">
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>


    <div class="mb-3 form-check" hidden>
        <label for="" class="form-label">Is Active</label>
        <input type="checkbox" class="form-check-input" asp-for="IsActive">
    </div>

    <button type="submit" class="btn btn-primary">Update</button>

    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-asp-controller="Product">Delete</button>
    @if (ViewData["ValidateMessage"] != null)
    {
        <br />
        <br />
        <label style="color:red">@ViewData["ValidateMessage"]</label>
    }
</form>