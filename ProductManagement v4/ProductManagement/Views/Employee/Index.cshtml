@model List<ProductManagement.Models.EmployeesViewModel>
@{
    ViewData["Title"] = "Users";
} 
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="text-center">
    <h1 class="display-4">Users</h1>

    <form method="get" asp-action="Index" class="employeeSearch mt-5" style="margin:auto;max-width:400px">
        <input type="text" placeholder="Search by name, surname or email" value="@ViewData["GetEmployees"]" name="searchField">
        <button type="submit"><i class="fa fa-search"></i></button>
    </form>
    <br />
    <table class="table" id="grid">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Edit</th>
                <th>Reset Password</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Firstname</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                    <td><a href="Edit/@employee.EmployeeId"><i class="fa fa-edit"></i></a></td>
                    <td><a href="ResetPassword/@employee.EmployeeId"><i class="fa fa-refresh"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $("#grid").kendoGrid({
            sortable: true,
            selectable: "row",
            resizable: true,
        });
    });
</script>